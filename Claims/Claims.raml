/claims:
  securedBy: [ oauth_2_0 ]
  displayName: Claims
  get:
    description: Returns a list of claims belonging to the claimant used to make the API request.
    queryParameters:
        claimantKennitala:
           displayName: Claimant's kennitala
           type: string 
           required: false
           description: The kennitala of the claimant whose data is being queried. If empty, data will be returned for all claimants linked to the authenticated user.
           example: 6606129980
        identifier:
          displayName: Identifier
          type: string
          required: false
          description: The unique identifier of the claimant used to filter the query. If empty, data will be returned for all identifiers.
          example: 100
        payorKennitala:
          displayName: Payor's kennitala
          type: string
          required: false
          description: Payor's kennitala.
          example: 6606129980
        status:
          displayName: Claim status.
          required: false
          description: Status of the claim.
          enum: [unpaid, paid, cancelled, invalid]
        state:
          displayName: Claim state.
          required: false
          description: State of the claim. Indicates the collections state the claim is in.
          enum: [primary, secondary, legal]
        referenceDate:
          displayName: Reference date.
          required: false
          description: Reference date for the datespan of the query.
          enum: [duedate, finalduedate, cancellationdate, creationdate]
        dateFrom:
           displayName: Date from
           type: string
           required: false
           description: Date from inclusive.
           example: 2016-01-31
        dateTo:
           displayName: Date to
           type: string
           required: false
           description: Date to inclusive.
           example: 2016-01-31
    is: [ pageable, subscribable ]
    responses:
      200:
        body:
            application/json:
              schema: claimCollection
              example: |
               {
                 "TotalCount": 2,
                  "Claim": [
                    {
                      "AccountID": "039926011462",
                      "Overdraft": 0,
                      "Balance": 299,
                      "AvailableAmount": 299,
                      "TotalAmountWaiting": 0,
                      "AccountOwnerID": "1725704905",
                      "CustomAccountName": "Félag áhugamanna um heimabanka",
                      "Id": 1
                    }
                  ]
                }
  post:
    description: Create a new claim.
    body:
      application/json:
        schema: claim
        example: |
         {
           "ClaimId": "039926011462",
           "Claimant": "6606129980",
           "Account": "0323-66-000001",
           "DueDate": "2016-04-14",
           "PayorID": "6606129980",
          }
    responses:
      200:
        body:
          application/json:
            schema: claim
            example: |
             {
               "ClaimId": "039926011462",
               "Claimant": "6606129980",
               "Account": "0323-66-000001",
               "DueDate": "2016-04-14",
               "PayorID": "6606129980",
              }
  /{claimId}:
    securedBy: [ oauth_2_0 ]
    is: [ subscribable ]
    displayName: Claim
    get:
      description: Returns a representation of a claim.
      responses:
        200:
          body:
            application/json:
              schema: claim
              example: |
               {
                 "ClaimId": "039926011462",
                 "Claimant": "6606129980",
                 "Account": "0323-66-000001",
                 "DueDate": "2016-04-14",
                 "PayorID": "6606129980",
                }
    patch:
      description: Allows you to modify the properties of a claim. For example to cancel a claim.
      responses:
        200:
          body:
            application/json:
              schema: claim
              example: |
               {
                 "ClaimId": "039926011462",
                 "Claimant": "6606129980",
                 "Account": "0323-66-000001",
                 "DueDate": "2016-04-14",
                 "PayorID": "6606129980",
                }
