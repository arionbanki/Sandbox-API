          },
          "cardType": {
            "type": "string",
            "description": "Card type e.g. purchasing card, general Arion Bank card, Platinum Arion Bank card"
          },
          "cardBrand": {
            "type": "string",
            "description": "Brand: V = Visa, M=Mastercard"
          },
          "cardRole": {
