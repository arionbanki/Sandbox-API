                  },
                  "transactionId": {
                    "type": "string",
                    "description": "Transaction number from systems at Borgun and Valitor"
                  },
                  "dueDate": {
                    "type": "string",
                    "description": "Due date yyyymm, e.g. 201106. In which period transaction was made"
                  },
